<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/botonesEncabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calificaciones"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#1F426E"
            android:paddingVertical="12dp"
            android:textSize="25sp"
            android:fontFamily="serif-monospace"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btnTodosAlumnos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/todos_los_alumnos"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#1997A8"
            android:paddingVertical="10dp"
            android:textSize="20sp"
            android:fontFamily="serif-monospace"
            android:layout_margin="7dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/btnAprobados"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/aprobados"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="#30A849"
                android:paddingVertical="10dp"
                android:textSize="20sp"
                android:fontFamily="serif-monospace"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/btnSuspensos"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/suspensos"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="#B68E3C"
                android:paddingVertical="10dp"
                android:textSize="20sp"
                android:fontFamily="serif-monospace"
                android:layout_marginEnd="7dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAlumnos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonesEncabezado" />

</androidx.constraintlayout.widget.ConstraintLayout>